text/html; cat '%s' | iconv -f %{charset} -t utf8 | w3m -dump -T text/html; nametemplate=%s.html; copiousoutput
image/jpeg; open %s
image/pjpeg; open %s
image/png; open %s
image/gif; open %s
application/x-msexcel; open %s
application/ms-exc; open %s
application/msexcel; open %s
application/excel; open %s
application/vnd.ms-exc; open %s
application/vnd.ms-excel; open %s
application/msword; open %s
application/pdf; open %s
application/octet-stream; open %s
