text/html; cat '%s' | iconv -f %{charset} -t utf8 | w3m -dump -T text/html; nametemplate=%s.html; copiousoutput
image/jpeg; ~/Code/dotfiles/mutt/view_attachment.sh %s jpg
image/pjpeg; ~/Code/dotfiles/mutt/view_attachment.sh %s jpg
image/png; ~/Code/dotfiles/mutt/view_attachment.sh %s png
image/gif; ~/Code/dotfiles/mutt/view_attachment.sh %s gif
application/x-msexcel; ~/Code/dotfiles/mutt/view_attachment.sh %s
application/ms-exc; ~/Code/dotfiles/mutt/view_attachment.sh %s
application/msexcel; ~/Code/dotfiles/mutt/view_attachment.sh %s
application/excel; ~/Code/dotfiles/mutt/view_attachment.sh %s
application/vnd.ms-exc; ~/Code/dotfiles/mutt/view_attachment.sh %s
application/vnd.ms-excel; ~/Code/dotfiles/mutt/view_attachment.sh %s
application/msword; ~/Code/dotfiles/mutt/view_attachment.sh %s "-" '/Applications/Bean.app'
application/vnd.openxmlformats-officedocument.wordprocessingml.document; ~/Code/dotfiles/mutt/view_attachment.sh %s "-" '/Applications/Bean.app'
application/x-pdf; ~/Code/dotfiles/mutt/view_attachment.sh %s
application/octet-stream; ~/Code/dotfiles/mutt/view_attachment.sh %s "-"
