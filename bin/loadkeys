#!/usr/bin/env zsh
# See also: loadgpg

autoload colors && colors

keynames=(github bitbucket clojars heroku)
(( $# > 0 )) && keynames=($@)
keys=()
for k in $keynames; do
	[[ -e "$HOME/.ssh/$k" ]] && keys+="$HOME/.ssh/$k"
done

echo " *  $fg_bold[blue]load$fg_bold[green]keys$reset_color  * "

ssh-add $keys 2>/dev/null && echo " $fg_bold[green]âœ” SSH$reset_color" && showkeys
