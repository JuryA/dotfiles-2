[core]
    excludesfile = ~/Code/dotfiles/gitignore
    whitespace = fix,space-before-tab,tab-in-indent,trailing-space
[apply]
    whitespace = fix
[user]
    name = myfreeweb
    email = floatboth@me.com
[github]
    user = myfreeweb
    token = !sh -c 'echo $GITHUB_TOKEN' # thanks: https://github.com/mattly/dotfiles
[difftool]
    prompt = false
[diff]
    renames = copy
    tool = vimdiff
    wordRegex = [^[:space:]]
    mnemonicprefix = true
[mergetool "threesome"]
    cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'ThreesomeInit'"
    trustExitCode = true
[merge]
    summary = true
    tool = threesome
[push]
    default = tracking
[branch]
    autosetupmerge = always
    autosetuprebase = always
[color]
    ui = true
[alias]
    a = add -A
    ci = commit -a
    co = checkout
    nb = checkout -b # newbranch
    st = status
    s = status -sb
    l = log --oneline --decorate --graph
    tip = log -n 1
    last = log -n 10 --oneline
    d = diff master
    two = diff HEAD@{1} HEAD@{0}
    vd = difftool
    mt = mergetool
    rc = rebase --continue
    rs = rebase --skip
    cp = cherry-pick -x
    t = tag -n1 -l
    rwt = reset --hard HEAD # revert working tree
    unci = reset --hard HEAD^ # uncommit
    sup = submodule foreach --recursive git pull origin master
    sadd = submodule add
    forget = rm --cached
[url "git://github.com/"]
    insteadOf = gh:
[url "git@github.com:myfreeweb/"]
    insteadOf = my:
