[user]
    name = myfreeweb
    email = me@myfreeweb.ru
[github]
    user = myfreeweb
[difftool "Kaleidoscope"]
    cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[difftool]
    prompt = false
[diff]
    renames = copy
  	tool = Kaleidoscope
  	guitool = Kaleidoscope
[color]
    ui = true
[alias]
    ci = commit -a
    st = status
    tags = tag -n1 -l
    rwt = reset --hard HEAD
    unci = reset --hard HEAD^
    sup = submodule foreach --recursive git pull
[url "git://github.com/"]
    insteadOf = gh:
[url "git@github.com:myfreeweb/"]
    insteadOf = my:
[core]
	excludesfile = ~/.gitignore
