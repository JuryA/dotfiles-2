[core]
    excludesfile = ~/Code/dotfiles/gitignore
    whitespace = fix,space-before-tab,tab-in-indent,trailing-space
    legacyheaders = false
    quotepath = false
    pager = $PAGER
[repack]
    usedeltabaseoffset = true
[apply]
    whitespace = fix
[user]
    name = myfreeweb
    email = floatboth@me.com
[github]
    user = myfreeweb
[difftool]
    prompt = false
[diff]
    renames = copy
    tool = vimdiff
    wordRegex = [^[:space:]]
    mnemonicprefix = true
[mergetool "threesome"]
    cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'ThreesomeInit'"
    trustExitCode = true
[merge]
    summary = true
    tool = threesome
[push]
    default = tracking
[branch]
    autosetupmerge = always
    autosetuprebase = always
[color]
    ui = auto
    interactive = auto
[alias]
    a    = !git add -A && git status -sb
    ca   = commit --amend
    ci   = commit -a
    cm   = commit -am
    co   = checkout
    cp   = cherry-pick -x
    d    = diff --color-words head
    forget = rm --cached
    l    = log --oneline --decorate --graph
    last = log -n 10 --oneline
    mt   = mergetool
    nb   = checkout -b # newbranch
    pu   = !git push && git push --tags
    rc   = rebase --continue
    rs   = rebase --skip
    rwt  = reset --hard HEAD # revert working tree
    s    = status -sb
    sadd = submodule add
    smaster = submodule foreach --recursive git checkout master
    st   = status
    sup  = submodule foreach --recursive git pull
    t    = tag -n1 -l
    tip  = log -n 1
    two  = diff --color-words HEAD@{1} HEAD@{0}
    unci = reset --hard HEAD^ # uncommit
    vd   = difftool
[url "git://github.com/"]
    insteadOf = gh:
[url "git@github.com:myfreeweb/"]
    insteadOf = my:
