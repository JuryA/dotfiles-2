[core]
    excludesfile = ~/Code/dotfiles/gitignore
    whitespace = fix,space-before-tab,tab-in-indent,trailing-space
    legacyheaders = false
    quotepath = false
    pager = $PAGER
[repack]
    usedeltabaseoffset = true
[apply]
    whitespace = fix
[user]
    name = myfreeweb
    email = floatboth@me.com
[github]
    user = myfreeweb
[difftool]
    prompt = false
[diff]
    renames = copy
    tool = vimdiff
    wordRegex = [^[:space:]]
    mnemonicprefix = true
[mergetool "threesome"]
    cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'ThreesomeInit'"
    trustExitCode = true
[merge]
    summary = true
    tool = threesome
[push]
    default = tracking
[branch]
    autosetupmerge = always
    autosetuprebase = always
[color]
    ui = auto
    interactive = auto
[alias]
    a = !git add -A && git status -sb
    ci = commit -a
    cm = commit -am
    ca = commit --amend
    co = checkout
    nb = checkout -b # newbranch
    st = status
    s = status -sb
    l = log --oneline --decorate --graph
    tip = log -n 1
    last = log -n 10 --oneline
    d = diff --color-words head
    two = diff --color-words HEAD@{1} HEAD@{0}
    vd = difftool
    mt = mergetool
    rc = rebase --continue
    rs = rebase --skip
    cp = cherry-pick -x
    t = tag -n1 -l
    rwt = reset --hard HEAD # revert working tree
    unci = reset --hard HEAD^ # uncommit
    sup = submodule foreach --recursive git pull
    sadd = submodule add
    smaster = submodule foreach --recursive git checkout master
    forget = rm --cached
[url "git://github.com/"]
    insteadOf = gh:
[url "git@github.com:myfreeweb/"]
    insteadOf = my:
