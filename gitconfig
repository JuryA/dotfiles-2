[core]
    excludesfile = ~/Code/dotfiles/gitignore
[user]
    name = myfreeweb
    email = me@myfreeweb.ru
[github]
    user = myfreeweb
    token = !sh -c 'echo $GITHUB_TOKEN' # thanks: https://github.com/mattly/dotfiles
[difftool "Kaleidoscope"]
    cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[difftool]
    prompt = false
[diff]
    renames = copy
    tool = vimdiff
    guitool = Kaleidoscope
[mergetool "threesome"]
    cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'ThreesomeInit'"
    trustExitCode = true
[merge]
    summary = true
    tool = threesome
[push]
    default = tracking
[branch]
    autosetupmerge = always
    autosetuprebase = always
[color]
    ui = true
[alias]
    a = add -A
    ass = add -A # LOL https://gist.github.com/894971
    ci = commit -a
    st = status
    s = status -s
    tags = tag -n1 -l
    rwt = reset --hard HEAD # revert working tree
    unci = reset --hard HEAD^ # uncommit
    sup = submodule foreach --recursive git pull origin master
    sadd = submodule add
    ksdiff = difftool --gui
    vd = difftool
    forget = rm --cached
    two = diff HEAD@{1} HEAD@{0}
    tip = log -n 1
    last = log -n 10 --oneline
    dima = diff master
[url "git://github.com/"]
    insteadOf = gh:
[url "git@github.com:myfreeweb/"]
    insteadOf = my:
