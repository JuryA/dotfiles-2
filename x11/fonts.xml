<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE fontconfig SYSTEM "../fonts.dtd">
<fontconfig>

	<match target="font">
		<edit mode="append" name="lcdfilter"><const>lcddefault</const></edit>
		<edit name="rgba" mode="append"><const>rgb</const></edit>
		<edit name="antialias" mode="assign"><bool>true</bool></edit>
		<edit name="hinting" mode="assign"><bool>true</bool></edit>
		<edit name="hintstyle" mode="assign"><const>hintslight</const></edit>
		<edit name="embeddedbitmap" mode="assign"><bool>false</bool></edit>
	</match>

	<!-- Don't autohint bold fonts... Although I haven't turned on autohint at all -->
	<match target="font">
		<test name="weight" compare="more"><const>medium</const></test>
		<edit name="autohint" mode="assign"><bool>false</bool></edit>
	</match>

	<!-- Defaults -->
	<alias>
		<family>sans-serif</family>
		<prefer>
			<family>Fira Sans</family>
			<family>PT Sans</family>
			<family>Helvetica Neue</family>
			<family>Noto Sans</family>
		</prefer>
	</alias>

	<alias>
		<family>serif</family>
		<prefer>
			<family>PT Serif</family>
			<family>Noto Serif</family>
			<family>Times New Roman</family>
		</prefer>
	</alias>

	<alias>
		<family>monospace</family>
		<prefer>
			<family>Fira Mono</family>
			<family>PT Mono</family>
			<family>Source Code Pro</family>
			<family>DejaVu Sans Mono</family>
		</prefer>
	</alias>

	<!-- No bitmaps! -->
	<selectfont>
		<rejectfont><pattern><patelt name="scalable"><bool>false</bool></patelt></pattern></rejectfont>
	</selectfont>

	<!-- No Arial! -->
	<match target="pattern">
		<test qual="any" name="family"><string>Arial</string></test>
		<edit name="family" mode="assign" binding="same"><string>Helvetica Neue</string></edit>
	</match>

	<!-- No Courier! -->
	<match target="pattern">
		<test qual="any" name="family"><string>Courier</string></test>
		<edit name="family" mode="assign" binding="same"><string>monospace</string></edit>
	</match>

	<!-- Don't antialias Chicago! -->
	<match target="pattern">
		<test qual="any" name="family"><string>ChicagoFLF</string></test>
		<edit name="antialias" mode="assign"><bool>false</bool></edit>
	</match>

</fontconfig>
