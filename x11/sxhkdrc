# bspwm hotkeys

alt + super + Escape
	bspc quit

# close window
alt + w
	bspc window -c

# balance desktop
alt + b
	bspc desktop -B

# window states
alt + {s,f,shift + f}
	bspc window -t {sticky,floating,fullscreen}

# alternate between last 2 windows/desktops
alt + {grave,Tab}
	bspc {window,desktop} -f last

# make biggest
alt + m
	bspc window -s biggest

# -p: preselection
alt + ctrl + {h,k,j,l}
	bspc window -p {left,down,up,right}

alt + ctrl + space
	bspc window -p cancel

# -e: edge (size)
alt + super + {h,k,j,l}
	bspc window -e {left -10,down +10,up -10,right +10}

# select window / move window
alt + {_,shift + }{h,k,j,l}
	bspc window -{f,s} {left,down,up,right}

# select desktop / move window to desktop
alt + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10}

alt + bracket{left,right}
	bspc desktop -f {prev,next}

# mouse stuff
~button1
	bspc pointer -g focus

alt + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

alt + !button{1-3}
	bspc pointer -t %i %i

alt + @button{1-3}
	bspc pointer -u

# multi monitor setup
alt + p
	~/.local/bin/multi-monitor

# wm independent hotkeys

alt + Return
	st -f monospace

alt + space
	rofi -show run

super + Tab
	rofi -show window

XF86Audio{Lower,Raise}Volume
	notify-send -t 500 -u low "`mixer vol {-,+}5`"

{F2,F3}
	notify-send -t 500 -u low "`mixer vol {-,+}5`"

XF86MonBrightness{Down,Up}
	~/.local/bin/brightctl {-,+}5

{F5,F6}
	~/.local/bin/brightctl {-,+}5

{F7,XF86AudioPrev}
	cmus-remote -C player-prev

{F8,XF86AudioPlay}
	cmus-remote -C player-pause

{F9,XF86AudioNext}
	cmus-remote -C player-next

super + shift + 3
	~/.local/bin/mkscreenshot

super + shift + 4
	~/.local/bin/mkscreenshot -s

super + shift + 5
	~/.local/bin/mkscreencast

super + l
	xset dpms force off; xautolock -locknow

super + p
	~/.local/bin/freepass-x11

super + f
	~/.local/bin/floatyoutube start

super + h
	~/.local/bin/floatyoutube toggleopacity

# make sxhkd reload its configuration files:
alt + Escape
	pkill -USR1 -x sxhkd
