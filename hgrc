# thanks:
# http://bitbucket.org/sjl/dotfiles

[ui]
username = myfreeweb <me@myfreeweb.ru>

[extensions]
mq =
fetch =
color =
rebase =
extdiff =
progress =
graphlog =
transplant =

[schemes]
bb = ssh://hg@bitbucket.org/

[diff]
git = True

[extdiff]
cmd.vd = vimdiff
opts.vd =
cmd.ksdiff = /usr/local/bin/ksdiff-wrapper
opts.ksdiff = hg

[defaults]
rebase = --keepbranches
addremove = --similarity 100

[alias]
ignore = ![ -n "$@" ] && echo '$@' >> `$HG root`/.hgignore && \
          $HG commit `$HG root`/.hgignore -Am 'Add "$@" to .hgignore.'
